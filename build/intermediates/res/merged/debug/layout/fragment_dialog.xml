<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/whatCase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/forward"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/tabEEGs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/use"
                android:textColor="#32FFFF" />

            <RadioButton
                android:id="@+id/self"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/setReference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/whatCase"
            android:layout_alignLeft="@+id/whatCase"
            android:layout_marginLeft="30dp"
            android:digits="0123456789"
            android:ems="10"
            android:hint="@string/setYou"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textColor="#00FFFF" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/layout"
        android:layout_marginTop="3dp"
        android:background="#3cabcc" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:orientation="vertical">

        <Button
            android:id="@+id/check"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_selector" />
    </RelativeLayout>

</RelativeLayout>