<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dip"
        tools:context=".MainActivity" />

    <!-- status bar : display connection info -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_gravity="bottom"
        android:background="@color/blue7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/status_title"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_margin="3dip" />

        <TextView
            android:id="@+id/status_text"
            style="@style/AppTheme.ConnectionInfoText"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_margin="3dip"
            android:layout_toRightOf="@+id/status_title" />

        <ImageView
            android:id="@+id/DrowEMOTICON"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dip"
            android:src="@drawable/arrow222" />

        <TextView
            android:id="@+id/DrowValue"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_margin="3dip"
            android:layout_toLeftOf="@+id/DrowEMOTICON"
            android:textColor="@color/graye"
            android:textSize="14sp" />
    </RelativeLayout>

</FrameLayout>